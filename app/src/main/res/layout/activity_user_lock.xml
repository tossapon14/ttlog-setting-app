<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lock.UserLockActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_init_lock"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#017338"
            android:text="Initialize New Lock"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Lock in system" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lock_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2FDFF"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>